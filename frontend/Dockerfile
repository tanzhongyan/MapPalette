# Build stage
FROM node:18-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Build the app
# Accept build arguments for all environment variables
ARG VITE_SUPABASE_URL
ARG VITE_SUPABASE_ANON_KEY
ARG VITE_API_URL
ARG VITE_USER_SERVICE_URL
ARG VITE_FEED_SERVICE_URL
ARG VITE_POST_SERVICE_URL
ARG VITE_INTERACTION_SERVICE_URL
ARG VITE_FOLLOW_SERVICE_URL
ARG VITE_PROFILE_SERVICE_URL
ARG VITE_SOCIAL_INTERACTION_URL
ARG VITE_SOCIAL_INTERACTION_SERVICE_URL
ARG VITE_EXPLORE_ROUTES_URL
ARG VITE_EXPLORE_ROUTES_SERVICE_URL
ARG VITE_LEADERBOARD_SERVICE_URL
ARG VITE_USER_DISCOVERY_SERVICE_URL
ARG GOOGLE_MAPS_API_KEY
ARG GOOGLE_MAPS_MAP_ID
ARG VITE_GOOGLE_MAPS_API_KEY
ARG VITE_GOOGLE_MAPS_MAP_ID
ARG VITE_APP_NAME=MapPalette
ARG VITE_APP_URL
ARG VITE_APP_ENV=production
ARG VITE_ENABLE_ANALYTICS=true
ARG VITE_ENABLE_ERROR_REPORTING=true
ARG VITE_ENABLE_DEBUG=false

# Set environment variables for build
ENV VITE_SUPABASE_URL=$VITE_SUPABASE_URL
ENV VITE_SUPABASE_ANON_KEY=$VITE_SUPABASE_ANON_KEY
ENV VITE_API_URL=$VITE_API_URL
ENV VITE_USER_SERVICE_URL=$VITE_USER_SERVICE_URL
ENV VITE_FEED_SERVICE_URL=$VITE_FEED_SERVICE_URL
ENV VITE_POST_SERVICE_URL=$VITE_POST_SERVICE_URL
ENV VITE_INTERACTION_SERVICE_URL=$VITE_INTERACTION_SERVICE_URL
ENV VITE_FOLLOW_SERVICE_URL=$VITE_FOLLOW_SERVICE_URL
ENV VITE_PROFILE_SERVICE_URL=$VITE_PROFILE_SERVICE_URL
ENV VITE_SOCIAL_INTERACTION_URL=$VITE_SOCIAL_INTERACTION_URL
ENV VITE_SOCIAL_INTERACTION_SERVICE_URL=$VITE_SOCIAL_INTERACTION_SERVICE_URL
ENV VITE_EXPLORE_ROUTES_URL=$VITE_EXPLORE_ROUTES_URL
ENV VITE_EXPLORE_ROUTES_SERVICE_URL=$VITE_EXPLORE_ROUTES_SERVICE_URL
ENV VITE_LEADERBOARD_SERVICE_URL=$VITE_LEADERBOARD_SERVICE_URL
ENV VITE_USER_DISCOVERY_SERVICE_URL=$VITE_USER_DISCOVERY_SERVICE_URL
ENV GOOGLE_MAPS_API_KEY=$GOOGLE_MAPS_API_KEY
ENV GOOGLE_MAPS_MAP_ID=$GOOGLE_MAPS_MAP_ID
ENV VITE_GOOGLE_MAPS_API_KEY=$VITE_GOOGLE_MAPS_API_KEY
ENV VITE_GOOGLE_MAPS_MAP_ID=$VITE_GOOGLE_MAPS_MAP_ID
ENV VITE_APP_NAME=$VITE_APP_NAME
ENV VITE_APP_URL=$VITE_APP_URL
ENV VITE_APP_ENV=$VITE_APP_ENV
ENV VITE_ENABLE_ANALYTICS=$VITE_ENABLE_ANALYTICS
ENV VITE_ENABLE_ERROR_REPORTING=$VITE_ENABLE_ERROR_REPORTING
ENV VITE_ENABLE_DEBUG=$VITE_ENABLE_DEBUG

RUN npm run build

# Production stage
FROM nginx:alpine

# Copy custom nginx config
COPY nginx.conf /etc/nginx/nginx.conf

# Copy built files
COPY --from=builder /app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
